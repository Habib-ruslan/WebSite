@model IEnumerable<_1.Models.ImageModel>
@{
    ViewData["Title"] = "Изображения";
}
<h3>Выберите файл для загрузки</h3>
<form asp-action="AddImage" asp-controller="PostModels" method="post" enctype="multipart/form-data">
    <input type="file" name="uploadedFile" /><br>
    <input type="submit" value="Загрузить" />
</form>

<h2>Все файлы</h2>
@foreach (var f in Model)
{
    <p><img src="@Url.Content(f.Path)"></p>
    <a asp-action="DeleteImage" asp-route-id="@f.Id">Удалить</a>
}